<div class="add-class">
    <h1>
        <%= title %>
    </h1>
    <%- messages() %>
    <form method="post" action="/inv/add-classification" id="addclass-form">
        <div>
            <label for="class_name">Classification Name: </label>
            <input type="text" id="class_name" name="classification_name" 
            pattern="^[A-Za-z0-9]+$"
            title="Classification name must contain only letters and numbers. No spaces or special characters."
            required
            value="<%= locals.classification_name %>">
        </div>
        <div class="class-btn">
            <button type="submit">Add Name</button>
        </div>
    </form>
</div>