<section class="login-section">
    <h1>
        <%= title %>
    </h1>
    <%- messages() %>
    <form method="post" action="/account/login" id="login-form">
        <label for="email" id="email">Email:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address">
        <br>
        <label for="password" id="password">password:</label>
        <div class="pass-msg">
            <small>Password must be at least 12 characters long, with at least 1 uppercase letter, 1 digit, and 1 special
                character.
            </small>
        </div>
        <input type="password" id="password" name="account_password" 
        autocomplete="new-password"
        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
        required>
        <br>
        <div class="logbtn-div">
            <button type="submit" id="login-btn">LOGIN</button>
        </div>
        <p class="no_account">No account?
            <a href="/account/registration">Sign-up</a>
        </p>
    </form>
</section>