<div class="add-inv">
    <h1>
        <%= title %>
    </h1>
    <p><%- messages() %></p>
    <p>Confirm Deletion - The delete is permanent.</p>
    <form method="post" action="/inv/confirmed/" id="updateForm">
       <fieldset>
            <div class="form-group">
                <label for="inv_make">Vehicle Make: </label>
                <input type="text"
                id="inv_make" name="inv_make"
                placeholder="Enter at least three character"
                minlength="3" readonly
                required value="<%= locals.inv_make %>">
            </div>
            <div class="form-group">
                <label for="inv_model">Vehicle Model: </label>
                <input type="text" id="inv_model" 
                name="inv_model" minlength="3" readonly
                required value="<%= locals.inv_model %>">
            </div>
            <div class="form-group">
                <label for="inv_year">Year: </label>
                <input type="number" id="inv_year"
                name="inv_year" required max="2025"
                readonly value="<%= locals.inv_year %>">
            </div>
            <div class="form-group">
                <label for="inv_price">Price: </label>
                <input type="number" id="inv_price" name="inv_price" readonly value="<%= locals.inv_price %>">
            </div>
        </fieldset>
        <div id="inv-btn">
            <button type="submit">Delete</button>
        </div>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>